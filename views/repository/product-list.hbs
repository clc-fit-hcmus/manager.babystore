<!--**********************************
    Content body start
***********************************-->
<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Hi, welcome back!</h4>
                    <p class="mb-0">Your business dashboard template</p>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Layout</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Blank</a></li>
                </ol>
            </div>
        </div>
        <div class="row">
            {{#each products}}
            <div class="col-xl-3 col-lg-6 col-md-4 col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <div class="new-arrival-product">
                            <div class="new-arrivals-img-contnent">
                                <img class="img-fluid" src="{{this.avatar}}" alt="">
                            </div>
                            <div class="new-arrival-content text-center mt-3">
                                <h4>{{this.ID_SANPHAM}}</h4>
                                <span class="price">{{price this.DONGIA}}Ä‘</span>
                                <p>{{this.TENLOAI}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

        {{#if is_notOne}}

        <nav style="height: 100px;">
            <ul class="pagination pagination-gutter pagination-primary no-bg justify-content-center">

                {{#if prev}}
                
                <li class="page-item page-indicator">
                    <a class="page-link" href="/product-list?page={{prev}}" tabindex="-1"><i class="la la-angle-left"></i></a>
                </li>

                {{/if}}

                {{#timesWithConst pages current}}

                <li class="page-item {{#splitAndCompare this " " operater='=='}}active{{/splitAndCompare}}"><a class="page-link" href="/product-list?page={{getSplit this " " 0}}">{{getSplit this " " 0}}</a></li>

                {{/timesWithConst}}

                {{#if is_overload}}{{else}}

                <li class="page-item page-indicator">
                    <a class="page-link" href="/product-list?page={{next}}"><i class="la la-angle-right"></i></a>
                </li>

                {{/if}}
            </ul>
        </nav>

        {{/if}}
    </div>
</div>
<!--**********************************
    Content body end
***********************************-->